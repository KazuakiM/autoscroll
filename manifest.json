{
    "applications": {"gecko": {"id": "0.1"}},
    "background": {"scripts": ["src/background.js"]},
    "browser_action": {
        "default_icon": "img/dead.svg",
        "default_title": "AutsSroller"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/content_scripts.js"]
    }],
    "description": "AutsSroller",
    "homepage_url": "https://github.com/KazuakiM/autoscroller",
    "icons": {
        "48": "img/dead.svg",
        "96": "img/dead.svg"
    },
    "manifest_version": 2,
    "name": "AutsSroller",
    "options_ui": {"page": "src/options_ui.html"},
    "permissions": [
        "activeTab",
        "storage"
    ],
    "version": "1.0"
}
